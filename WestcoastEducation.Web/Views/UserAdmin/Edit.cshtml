@model WestcoastEducation.Web.Models.UserModel

@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1 class="page-title">Redigera anv√§ndare</h1>

    <form class="shadow" asp-action="edit" asp-controller="UserAdmin" asp-route-userId=@Model.UserId method="post">

        <div class="form-control">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span class="error" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-control">
            <label for="LastName"></label>
            <input asp-for="LastName" />
            <span class="error" asp-validation-for="LastName"></span>
        </div>
        <div class="form-control">
            <label for="Email"></label>
            <input asp-for="Email" />
            <span class="error" asp-validation-for="Email"></span>
        </div>
        <div class="form-control">
            <label for="SocialSecurityNumber"></label>
            <input asp-for="SocialSecurityNumber" />
            <span class="error" asp-validation-for="SocialSecurityNumber"></span>
        </div>
        <div class="form-control">
            <label for="StreetAddress"></label>
            <input asp-for="StreetAddress" />
            <span class="error" asp-validation-for="StreetAddress"></span>
        </div>
        <div class="form-control">
            <label for="PostalCode"></label>
            <input asp-for="PostalCode" />
            <span class="error" asp-validation-for="PostalCode"></span>
        </div>
        <div class="form-control">
            <label for="Phone"></label>
            <input asp-for="Phone" />
            <span class="error" asp-validation-for="Phone"></span>
        </div>
        <div class="form-control">
            <label for="IsATeacher"></label></label>
            <input asp-for="IsATeacher" type="checkbox" />
            <span class="error" asp-validation-for="IsATeacher"></span>
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn-submit">
                    <i class="fa-sharp fa-solid fa-floppy-disk"></i> Spara
                </button>
                <button class="btn-cancel">
                    <a asp-action="Index" asp-controller="UserAdmin">
                        <i class="fa-solid fa-arrow-left"></i> Avbryt</a>
                </button>
            </div>

        </div>
    </form>
</section>